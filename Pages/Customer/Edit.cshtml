<form asp-page-handler="Save">
    <input type="hidden" class="form-control" asp-for="CurrentCustomer.Id" value="@Model.CurrentCustomer.Id">
    <div class="form-group">
        <label for="firstname">First Name</label>
        <input type="text" class="form-control" asp-for="CurrentCustomer.FirstName" value="@Model.CurrentCustomer.FirstName" placeholder="Enter First Name">
    </div>
    <div class="form-group">
        <label for="lastname">Last Name</label>
        <input type="text" class="form-control" asp-for="CurrentCustomer.LastName" value="@Model.CurrentCustomer.LastName" placeholder="Enter Last Name">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" asp-for="CurrentCustomer.Email" value="@Model.CurrentCustomer.Email" id="email" placeholder="Email">
    </div>
    <div class="form-group">
        <label for="phonenumber">Phone Number</label>
        <input type="text" class="form-control" asp-for="CurrentCustomer.PhoneNumber" value="@Model.CurrentCustomer.PhoneNumber" id="email" placeholder="Phone Number">
    </div>
    <div class="form-group">
        <label for="secret">Secret</label>
        <input type="text" class="form-control" asp-for="CurrentCustomer.Secret" value="@Model.CurrentCustomer.Secret" id="secret" placeholder="Secret">
    </div>
