@page
@model DC2.UI.Pages.Customer.AddCustomerModel
@{
        if (User.Identity.IsAuthenticated)
    {
        Layout = "_LayoutLogedIn";
    }
}

<center>
    <h1>Add Customer</h1>
    <br>
</center>

<form asp-page-handler="Save">
    <div class="form-group">
        <label for="firstname">First Name</label>
        <input type="text" class="form-control" asp-for="CurrentCustomer.FirstName" placeholder="Enter First Name">
        <span class="text-danger" asp-validation-for="CurrentCustomer.FirstName"></span>
    </div>
    <div class="form-group">
        <label for="lastname">Last Name</label>
        <input type="text" class="form-control" asp-for="CurrentCustomer.LastName" placeholder="Enter Last Name">
        <span class="text-danger" asp-validation-for="CurrentCustomer.LastName"></span>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" asp-for="CurrentCustomer.Email" id="email" placeholder="Email">
        <span class="text-danger" asp-validation-for="CurrentCustomer.Email"></span>
    </div>
    <div class="form-group">
        <label for="phonenumber">Phone Number</label>
        <input type="text" class="form-control" asp-for="CurrentCustomer.PhoneNumber" id="email" placeholder="Phone Number">
        <span class="text-danger" asp-validation-for="CurrentCustomer.PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label for="secret">Secret</label>
        <input type="text" class="form-control" asp-for="CurrentCustomer.Secret" id="secret" placeholder="Secret">
        <span class="text-danger" asp-validation-for="CurrentCustomer.Secret"></span>
    </div>
    @*<div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">I accept all cookies on this website</label>
        </div>*@
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-page="./Customer" class="btn btn-primary">Back</a>
</form>