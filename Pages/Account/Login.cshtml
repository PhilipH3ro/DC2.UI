@page
@model DC2.UI.Pages.Account.LoginModel
@{
}


<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                    <form class="form-signin" method="post">
                        <div class="form-label-group"> <input type="text" asp-for="Credential.UserName" class="form-control" placeholder="Username" required autofocus> <label asp-for="Credential.UserName">Username</label> </div>
                        <div class="form-label-group"> <input type="password" asp-for="Credential.Password" class="form-control" placeholder="Password" required> <label asp-for="Credential.Password">Password</label> </div>
                        <div class="custom-control custom-checkbox mb-3"> <input type="checkbox" class="custom-control-input" id="customCheck1"> <label class="custom-control-label" for="customCheck1">Remember password?</label> </div> <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>